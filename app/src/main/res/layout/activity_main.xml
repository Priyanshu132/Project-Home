<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="#FFF">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:layout_marginHorizontal="7dp"
        android:layout_marginVertical="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hostelname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#071233"
            android:fitsSystemWindows="true"
            android:textSize="22dp" />

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:id="@+id/re">



   <ImageView
       android:id="@+id/hostelpic"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:layout_marginHorizontal="15dp"
       android:layout_marginBottom="3dp"

       android:scaleType="fitXY"
       android:src="@drawable/ima"/>



        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="10dp"
            android:background="#CE22284D"/>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fitsSystemWindows="true"
            android:layout_marginHorizontal="10dp">

            <Button
                android:id="@+id/profile"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Profile"
                android:textSize="10dp"
                android:layout_marginLeft="10dp"
                android:drawableTop="@drawable/ic_person_black_50dp"
                android:background="@drawable/button" />

            <Button
                android:id="@+id/mess"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button"
                android:drawableTop="@drawable/ic_free_breakfast_black_40dp"
                android:text="Mess Time Table"
                android:textSize="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/student"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:drawableTop="@drawable/ic_group_black_50dp"
                android:text="Student List"
                android:background="@drawable/button"/>
            <Button
                android:id="@+id/payment"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="10dp"
                android:drawableTop="@drawable/ic_payment"
                android:background="@drawable/button"
                android:text="payment"
                android:layout_marginRight="10dp"/>




        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginHorizontal="10dp">

            <Button
                android:id="@+id/faci"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Facilties"
                android:drawableTop="@drawable/ic_faci"
                android:textSize="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button" />

            <Button
                android:id="@+id/hostel"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button"
                android:text="Hostel's Pic"
                android:drawableTop="@drawable/ic_video_library_black_50dp"
                android:textSize="10dp"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/noti"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button"
                android:text="Rules"
                android:textSize="10dp"
                android:drawableTop="@drawable/ic_view_list_black_50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/about"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="About"
                android:drawableTop="@drawable/ic_about"
                android:textSize="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
       android:weightSum="2"
        android:background="@drawable/button"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:id="@+id/scan"
            android:layout_width="1dp"
            android:layout_height="match_parent"
          android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance"
            android:textColor="#000"
            android:textSize="22dp"
            android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Code"
                android:textColor="#0B1F81"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="#39000000"/>
        <LinearLayout
            android:id="@+id/attendance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Checked"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F50320"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginRight="3dp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0B1F81"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0B1F81"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/thought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/button"
        android:layout_marginHorizontal="10dp">



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The best way to get rid of your problem is to face them..."
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/newt"
            android:textColor="#0B1F81" />

    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>