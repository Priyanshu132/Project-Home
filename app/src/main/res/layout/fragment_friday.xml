<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    tools:context=".Friday">

    <Button
        android:id="@+id/feedback"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="FeedBack\nor\nComplain"
        android:textSize="15dp"
        android:textColor="#fff"
        android:background="@drawable/feedback_button"
        android:layout_gravity="center"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/noon_layout"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/noon_back">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LUNCH"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="25dp"/>

                        <View
                            android:layout_width="85dp"
                            android:layout_height="1dp"
                            android:background="#000"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"/>


                    </LinearLayout>


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="2dp"
                                android:id="@+id/noon_recycle"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                        </LinearLayout>

                    </ScrollView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/morning_back"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/night_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DINNER"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="25dp"/>

                        <View
                            android:layout_width="90dp"
                            android:layout_height="1dp"
                            android:background="#000"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"/>


                    </LinearLayout>


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="2dp"
                                android:id="@+id/night_recycle"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                        </LinearLayout>

                    </ScrollView>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/morning_back"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/morning_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BREAKFAST"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="17dp"/>

                        <View
                            android:layout_width="103dp"
                            android:layout_height="1dp"
                            android:background="#000"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="5dp"/>


                    </LinearLayout>


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="2dp"
                                android:id="@+id/morning_recycle"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                        </LinearLayout>

                    </ScrollView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/noon_back"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/evening_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SUPPER"
                            android:textColor="#000"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="75dp"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <View
                            android:layout_width="75dp"
                            android:layout_height="1dp"
                            android:background="#000"
                            android:layout_marginLeft="75dp"
                            android:layout_marginBottom="5dp"/>


                    </LinearLayout>


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="2dp"
                                android:layout_marginTop="10dp"
                                android:id="@+id/evening_recycle"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                        </LinearLayout>

                    </ScrollView>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</FrameLayout>