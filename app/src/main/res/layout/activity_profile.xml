<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dra"
    android:background="#FFF"
    tools:context="mind.blower.home.Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_person_black_50dp"/>


        <TextView
            android:id="@+id/rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#10164E"
            android:textStyle="bold|italic"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#10164E"
            android:textStyle="bold|italic"
            android:layout_gravity="center"
            android:textSize="14dp"/>

</LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Static_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:visibility="gone"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#10164E"/>

            <TextView
                android:id="@+id/static_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course"
                android:textColor="#000"
                android:visibility="gone"
                android:textSize="18dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#10164E"/>





                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile No."
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/mob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8529637418"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:textSize="16dp"
                android:textColor="#10164E"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Religion"
                android:textColor="#000"
                android:textSize="18dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HINDU"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#10164E"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MALE"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#10164E"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INN25@GMAIL.COM"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#10164E"/>



                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#000"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Permanent Address"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="#10164E"/>





                </LinearLayout>




            </LinearLayout>

    </ScrollView>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/activity_profile_drawer"
        android:fitsSystemWindows="true"
        app:itemTextColor="@color/dra_font"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        />

</androidx.drawerlayout.widget.DrawerLayout>